<p style="color: green"><%= notice %></p>

<h1><%= @question.quiz.title %></h1>
<div>
  <p>
    <strong>Question:</strong>
    <%= @question.name %>
  </p>
</div>

<div>
  <%= button_to "Edit this question", edit_question_path(@question) %> |
  <%= button_to "Delete this question", @question, method: :delete %>
</div>
<%= link_to "Back to quiz", quiz_path(@question.quiz) %>
